    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "storybook": "^7.6.4",
    "tailwindcss": "^3.3.0",
    "tailwindcss-touch": "^1.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "5.2"
  }
